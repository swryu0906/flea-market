<div class="row">
  <% @listings.each do |listing| %>
    <div class="col-sm-3">
      <div class="thumbnail">
        <%= image_tag listing.image.url, class: 'img-responsive', alt: 'listing image'%><br>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <div class="text-center">
            <p><%= number_to_currency(listing.price) %></p>
            <p><%= link_to 'Show', listing, class: 'btn btn-link' %><%= link_to 'Edit', edit_listing_path(listing), class: 'btn btn-link' %> <%= link_to 'Delete', listing, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-link' %></p>       
          </div> 
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Listing', new_listing_path, class: 'btn btn-link' %>
