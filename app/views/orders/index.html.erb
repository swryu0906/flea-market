<article>
  <div class="container-fluid">
    <div class="content-box thumbnail">
      <h3 class="text-center">Listing Orders</h3>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th class="text-center">ID</th>
            <th class="text-center">Image</th>
            <th class="text-center">Item</th>
            <th class="text-center">Price</th>
            <th class="text-center">Seller</th>
            <th class="text-center">Buyer</th>
            <th class="text-center">Date</th>
            <th class="text-center">Address</th>
            <th class="text-center">City</th>
            <th class="text-center">State</th>
            <th class="text-center">Zip</th>

          </tr>
        </thead>

        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td class="text-center"><%= order.id %></td>
              <td class="text-center"><%= link_to order.listing do %><img src="<%= order.listing.image.url(:thumb) %>" alt="listing-<%= order.listing.id %>-image" class: "img-responsive center-block" ><% end %></td>
              <td class="text-center"><%= link_to truncate(order.listing.name, length: 40, separator: ' '), order.listing %></td>
              <td class="text-center"><%= number_to_currency(order.listing.price) %></td>
              <td class="text-center"><%= "#{ order.seller.first_name } #{ order.seller.last_name[0] }." %></td>
              <td class="text-center"><%= "#{ order.buyer.first_name } #{ order.buyer.last_name[0] }." %></td>
              <td class="text-center"><%= order.created_at.strftime("%b %e, %Y %l:%M %p") %></td>
              <td class="text-center"><%= order.address %></td>
              <td class="text-center"><%= order.city %></td>
              <td class="text-center"><%= order.state %></td>
              <td class="text-center"><%= order.zip %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</article>